pipeline {
    agent any
    environment {
        FLASK_APP = "app.py"
        FLASK_ENV = "development"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'jenkins']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/MeryembentalebEJ/Mery-aws.git']]])
            }
        }
        stage('Build') {
            steps {
                sh 'pip install -r ./backend-Python/requirements.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest ./backend-Python/unit_test.py'
            }
        }
        stage('Run API') {
            steps {
                sh 'python ./backend-Python/app.py &'
            }
        }
        stage('Merge to Dev') {
            steps {
                sh 'git checkout Dev && git merge origin/jenkins'
            }
        }
        stage('Deploy to Dev') {
            steps {
                sh 'echo "http://localhost:5000"'
            }
        }
    }
}